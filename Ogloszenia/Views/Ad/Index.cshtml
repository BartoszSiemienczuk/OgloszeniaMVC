@using Ogloszenia.Models
@{
    ViewBag.Title = "Przeglądaj ogłoszenia";
    var categories = (List<Ogloszenia.Models.Category>)ViewData["categories"];
    var ads = (List<Ogloszenia.Models.Ad>)ViewData["ads"];
}

<div class="col-xs-12 col-sm-4">
    <div class="panel panel-default">
        <div class="panel-heading">Kategorie</div>
        <div class="panel-body">
            <ul>
                @foreach (Category c in categories)
                {
                    <li>
                        <a href="#">@c.Name</a>
                        <ul>
                            @foreach (Category c1 in c.getChildCategories())
                            {
                                <li>@c1.Name</li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

<div class="col-xs-12 col-sm-8">
    <table class="table">
        @foreach (var item in ads)
            {
            <tr>
                <td>
                    @Html.DisplayName(item.Title)
                </td>
                <td>
                    @item.ContentShort
                </td>
                <td>
                    @item.Visits
                </td>
                <td>
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.AdID })
                </td>
            </tr>
        }
    </table>
</div>
