@using PagedList;
@using PagedList.Mvc;
@model IPagedList<Ogloszenia.Models.Ad>

@{
    ViewBag.Title = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage</h2>
    <table class="table">
        <tr>
            <th>
                Tytuł
            </th>
            <th>
                Krótka treść
            </th>
            <th>
                Data ważności
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.ContentShort
                </td>
                <td>
                    @item.ExpirationDate
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "Edit", new { id = item.AdID }) |
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.AdID }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.AdID })
                </td>
            </tr>
        }
    </table>
    @Html.PagedListPager(Model, pageNumber => Url.Action("Manage", new
{
    pageNumber,
}))

